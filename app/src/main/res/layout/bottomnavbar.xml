<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:background="@color/white"
    android:id="@+id/BaseActivity"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:foregroundGravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/dynamicContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:background="@color/white">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/BottomNavBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <RadioButton
            android:id="@+id/homebutton"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="Home"
            android:layout_weight="1"
            android:button="@null"
            android:padding="2dp"
            android:checked="false"
            android:textSize="12sp"
            android:drawableTop="@mipmap/icon_home"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/classbutton"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:padding="2dp"
            android:checked="false"
            android:textSize="12sp"
            android:drawableTop="@mipmap/icon_list"
            android:textColor="@color/black"
            android:text="Classes"/>

        <RadioButton
            android:id="@+id/statsbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@mipmap/icon_stats"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp"
            android:text="Stats"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/settingbutton"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:button="@null"
            android:padding="2dp"
            android:checked="false"
            android:layout_weight="1"
            android:textSize="12sp"
            android:drawableTop="@mipmap/icon_settings"
            android:textColor="@color/black"

            android:text="Settings"/>
    </RadioGroup>

</android.support.design.widget.CoordinatorLayout>

